@{
    ViewData["Title"] = "Bize Ulaşın";
}

<div class="container">
    <h1>Bize Ulaşın</h1>
    <p>Herhangi bir soru veya geri bildirim için bize ulaşmaktan çekinmeyin.</p>

    <form>
        <div class="form-group">
            <label for="name">Ad</label>
            <input type="text" class="form-control" id="name" placeholder="Adınızı girin">
        </div>

        <div class="form-group">
            <label for="email">E-posta</label>
            <input type="email" class="form-control" id="email" placeholder="E-posta adresinizi girin">
        </div>

        <div class="form-group">
            <label for="message">Mesaj</label>
            <textarea class="form-control" id="message" rows="5" placeholder="Mesajınızı girin"></textarea>
        </div>

        <button type="submit" class="btn btn-primary">Gönder</button>
    </form>
</div>
