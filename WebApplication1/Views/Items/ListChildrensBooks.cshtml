@model WebApplication1.Models.Items

@{
    ViewData["Kategori"] = "Çocuk Kitapları";
}

<!DOCTYPE html>
<html>
<head>
    <title>Çocuk Kitapları</title>
    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.3.1/css/bootstrap.min.css">
</head>
<body class="container">

<h2 class="mt-3">Çocuk Kitapları</h2>

<div class="row mt-3">
    @foreach (var book in Model.ChildrensBooks)
    {
        <div class="col-md-4 mb-3">
            <div class="card">
                <img src="@Url.Content(book.Image)" alt="@book.Title" class="card-img-top" style="max-width: 100%; max-height: 350px;">
                <div class="card-body">
                    <h5 class="card-title">@book.Title</h5>
                    <div class="card-text">
                        <span class="badge badge-primary badge-pill">ID: @book.ID</span>
                        <span class="badge badge-success badge-pill">Çizer: @book.Illustrator</span>
                        <span class="badge badge-warning badge-pill">Yayım Yılı: @book.Year</span>
                        <span class="badge badge-danger badge-pill">Fiyat: @book.Price</span>
                        <span class="badge badge-secondary badge-pill">Yaş Aralığı: @book.AgeRange</span>
                    </div>
                </div>
            </div>
        </div>
    }
</div>

<script src="https://code.jquery.com/jquery-3.3.1.slim.min.js"></script>
<script src="https://cdnjs.cloudflare.com/ajax/libs/popper.js/1.14.7/umd/popper.min.js"></script>
<script src="https://stackpath.bootstrapcdn.com/bootstrap/4.3.1/js/bootstrap.min.js"></script>
</body>
</html>
