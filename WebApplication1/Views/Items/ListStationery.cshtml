@model WebApplication1.Models.Items

@{
    ViewData["Kategori"] = "Kırtasiye";
}

<!DOCTYPE html>
<html>
<head>
    <title>Kırtasiye</title>
    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.3.1/css/bootstrap.min.css">
</head>
<body class="container">

<h2 class="mt-3">Kırtasiye</h2>

<ul class="list-group mt-3">
    @foreach (var item in Model.Stationery)
    {
        <li class="list-group-item">
            <div class="d-flex justify-content-between align-items-center">
                <img src="@Url.Content(item.Image)" alt="@item.Name" style="max-width: 50px; max-height: 50px;">
                <div>
                    <h5 class="mb-0">@item.Name</h5>
                    <small style="background-color: #6c757d; color: #fff; padding: 2px 5px; border-radius: 3px;">ID: @item.ID</small>
                </div>
                <span class="badge badge-primary badge-pill">@item.Price</span>
            </div>
        </li>
    }
</ul>

<script src="https://code.jquery.com/jquery-3.3.1.slim.min.js"></script>
<script src="https://cdnjs.cloudflare.com/ajax/libs/popper.js/1.14.7/umd/popper.min.js"></script>
<script src="https://stackpath.bootstrapcdn.com/bootstrap/4.3.1/js/bootstrap.min.js"></script>
</body>
</html>
